<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wheel">
    <xacro:macro name="wheel" params="prefix parent xyz:='0 0 0' rpy:='0 0 0'">
        <joint name="${prefix}_wheel_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}" />
            <!-- <origin xyz="0.554283 0.625029 0.3" rpy="-1.5707 0 0" /> -->
            <parent link="${parent}" />
            <child link="${prefix}_wheel" />
            <axis xyz="0 0 1" />
            <dynamics damping="0.2" />
        </joint>
        <transmission name="${prefix}_trans" type="SimpleTransmission">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="${prefix}_motor">
                <!-- ギア比 -->
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="${prefix}_wheel_joint">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
        </transmission>

        <!-- ${prefix} wheel Link -->
        <link name="${prefix}_wheel">
            <collision>
                <geometry>
                    <cylinder radius="0.1" length="0.045" />
                </geometry>
            </collision>

            <visual>
                <geometry>
                    <cylinder radius="0.1" length="0.045" />
                </geometry>
                <material name="red">
                    <color rgba="1 0 0 1" />
                </material>
            </visual>
            <inertial>
                <mass value="3.0" />
                <inertia ixx="0.3"
                    ixy="0.0"
                    ixz="0.0"
                    iyy="0.3"
                    iyz="0.0"
                    izz="0.3" />
            </inertial>
        </link>
    </xacro:macro>
</robot>